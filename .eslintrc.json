{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "class-methods-use-this": "off",
    "comma-dangle": ["error", "never"],
    "default-case": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "import/extensions": ["off"],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "max-len": ["warn", 120],
    "no-param-reassign": "off",
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-use-before-define": "off",
    "padded-blocks": [
      "error",
      {
        "classes": "always"
      }
    ]
  },
  "globals": {
    "elementBehaviors": true,
    "JamsEdu": true,
    "JamsEduIcon": true
  }
}
